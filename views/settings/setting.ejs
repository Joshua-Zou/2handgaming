<script>
    var changed = false;

    async function updatePassword() {
        let oldPass = document.getElementById("old_password").value;
        let newPass1 = document.getElementsByClassName("new_password")[0].value;
        let newPass2 = document.getElementsByClassName("new_password")[1].value;
        if (newPass1 !== newPass2) {
            return showError("New passwords do not match!")
        }
        let result = await fetch('/api/resetPass', {
            method: 'POST',
            body: JSON.stringify({ code: oldPass, password: newPass1, useOldPassword: true, email: '<%-user.email%>' }),
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
        })
        result = await result.text();
        console.log(result)
        if (result !== "good") {
            return showError(result)
        } else {
            changed = false;
            showError("Password has been reset!");
        }
    }

    window.addEventListener("beforeunload", function (e) {
        if (changed === true) {
            var confirmationMessage = "\o/";

            (e || window.event).returnValue = confirmationMessage;
            return confirmationMessage;
        }
    });
    $("input, textarea").on("input", function () {
        changed = true;
    })
    function updateProfile() {
        showingErr = true;
        let first = document.getElementById("firstname");
        let middle = document.getElementById("middlename");
        let last = document.getElementById("lastname");
        let phone = document.getElementById("phone");
        let bio = document.getElementById("bio");
        let username = document.getElementById("username");
        if (first.value.replace(/ /g, "").length === 0) return showError("First name must not be blank! (We're pretty sure you have a first name)");
        else if (last.value.replace(/ /g, "").length === 0) return showError("Last name must not be blank! (We're pretty sure you have one  <small> unless you're from Iceland</small>)");
        else if (username.value.replace(/ /g, "").length < 5) return showError("Usernames must have 5 or more characters!");

        let body = {
            first: first.value,
            middle: middle.value,
            last: last.value,
            phone: phone.value,
            bio: bio.value,
            username: username.value
        }
        fetch("/api/settings", {
            method: "POST",
            body: JSON.stringify(body),
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
        }).then(result => result.text()).then(text => {
            if (text !== "good") return showError(text);
            else {
                window.nextreload = true;
                changed = false;
                showError("Your settings have been updated!")
            }
        })
        //showError("help me")
    }
    var showingErr = false;
    function showError(text) {
        showingErr = true;
        document.getElementById("errormessage").innerHTML = text;
        document.getElementById("errordiv").style.bottom = "20px";
        setTimeout(next, 400)
        function next() {
            document.getElementById("errordiv").style.bottom = "10px";
            showingErr = false;
        }
    }
    function hideError() {
        if (showingErr === true) return;
        document.getElementById("errordiv").style.bottom = "-150px";
        document.getElementById("errordiv").style.transition = "all .2s ease-out";
        setTimeout(next, 400)
        function next() {
            document.getElementById("errordiv").style.transition = "all .3s ease-out";
            if (window.nextreload === true) {
                delete window.nextreload;
                window.location.reload();
            }
        }
    }
    function getQueryVariable(variable) {
        var query = window.location.search.substring(1);
        var vars = query.split('&');
        for (var i = 0; i < vars.length; i++) {
            var pair = vars[i].split('=');
            if (decodeURIComponent(pair[0]) == variable) {
                return decodeURIComponent(pair[1]);
            }
        }
        console.log('Query variable %s not found', variable);
    }
    const pages = {
        profile: "profile-tab",
        security: "password-tab",
        notifications: "notification-tab",
    }
    let page = getQueryVariable("page");
    console.log(page)
    if (pages[page]) {
        document.getElementById(pages[page]).click()
    }

    document.getElementById("profile-tab").addEventListener("click", function () {
        document.body.innerHTML = "";
        document.body.style.display = "none !important";
        window.location.href = "?page=profile"
    })
    document.getElementById("password-tab").addEventListener("click", function () {
        document.body.innerHTML = "";
        document.body.style.display = "none !important";
        window.location.href = "?page=security"
    })
    document.getElementById("notification-tab").addEventListener("click", function () {
        document.body.innerHTML = "";
        document.body.style.display = "none !important";
        window.location.href = "?page=notifications"
    })

    function openfilemodal() {
        let input = document.getElementById("choosefileimage");
        handleFiles(input.files)
        document.getElementById("selectimagemodal").classList.remove("invisible")
    }
    function clickbutton(buttonid) {
        document.getElementById(buttonid).click();
    }
    function handleFiles(files) {
        for (let i = 0; i < files.length; i++) {
            const file = files[i];

            if (!file.type.startsWith('image/')) { continue }

            const img = document.createElement("img");
            img.classList.add("setprofileimage");
            img.file = file;
            let preview = document.getElementById("showimagemodalhere")
            preview.appendChild(img); // Assuming that "preview" is the div output where the content will be displayed.

            const reader = new FileReader();
            reader.onload = (function (aImg) { return function (e) { aImg.src = e.target.result; }; })(img);
            reader.readAsDataURL(file);
        }
    }

    window.addEventListener('click', function (e) {
        if (document.getElementById('selectimagemodal').contains(e.target) || document.getElementById('errordiv').contains(e.target)) {
            // Clicked in box
        } else {
            // Clicked outside the box
            document.getElementById('selectimagemodal').classList.add("invisible");
            hideError();
        }
    });

    async function updateNotifSettings() {
        let buyItemNotif = document.querySelector("#notification1").checked;
        let lookItemNotif = document.querySelector("#notification2").checked;
        let suggestedItems = document.querySelector("#notification3").checked;
        console.log(buyItemNotif, lookItemNotif, suggestedItems);
        let result = await fetch('/api/changeNotifications', {
            method: 'POST',
            body: JSON.stringify({ buyItemNotif: buyItemNotif, lookItemNotif: lookItemNotif, suggestedItems: suggestedItems }),
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
        })
        result = await result.text();
        console.log(result)
        if (result !== "good") {
            return showError(result)
        } else {
            changed = false;
            showError("Your changes have been successfully reset!");
        }
    }
</script>
